<resources>

    <style name="Toolbar.Popup.AppCompat" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="colorControlHighlight">@color/primary_text</item>
    </style>

    <style name="Toolbar.AppCompat.Responsive" parent="AppTheme">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
    </style>

    <style name="Responsive.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="maxButtonHeight">48dp</item>
        <item name="android:paddingLeft">@dimen/toolbar_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/toolbar_horizontal_padding</item>
        <item name="contentInsetStart">@dimen/first_keyline</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Responsive.Toolbar.Button.Navigation" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">48dp</item>
    </style>

    <style name="Responsive.ActionButton.Overflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="Responsive.ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">@dimen/toolbar_horizontal_padding</item>
    </style>

    <style name="Responsive.ActionButton.CloseMode" parent="Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:minWidth">48dp</item>
    </style>

    <style name="PrimaryText" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="SecondaryText" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="HintText">
        <item name="android:textColor">@color/tertiary_text</item>
    </style>

    <style name="ColoredButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn</item>
        <item name="android:color">@color/colorAccent</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="ColdStart.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="ColdStart.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>