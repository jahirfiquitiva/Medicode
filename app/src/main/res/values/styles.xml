<resources>

    <style name="Toolbar.Popup.AppCompat" parent="Theme.AppCompat.Light"/>

    <style name="Toolbar.AppCompat.Responsive" parent="AppTheme">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
    </style>

    <style name="Responsive.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="maxButtonHeight">48dp</item>
        <item name="android:paddingLeft">@dimen/toolbar_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/toolbar_horizontal_padding</item>
        <item name="contentInsetStart">@dimen/first_keyline</item>
    </style>

    <style name="Responsive.Toolbar.Button.Navigation" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">48dp</item>
    </style>

    <style name="Responsive.ActionButton.Overflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="Responsive.ActionMode" parent="Widget.AppCompat.ActionMode">
        <!--
        <item name="android:paddingLeft">@dimen/toolbar_horizontal_padding</item>
        -->
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">@dimen/toolbar_horizontal_padding</item>
    </style>

    <style name="Responsive.ActionButton.CloseMode" parent="Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:minWidth">48dp</item>
    </style>

    <style name="PrimaryText" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">#de000000</item>
    </style>

    <style name="SecondaryText" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">#8a000000</item>
    </style>

    <style name="HintText">
        <item name="android:textColor">#61000000</item>
    </style>

</resources>